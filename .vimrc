filetype plugin on
syntax on
set noswapfile
set hidden

" menu
set showcmd
set wildmenu

" search
set hlsearch
set ignorecase
set smartcase

" indent and tabs
set autoindent
set shiftwidth=4
set softtabstop=4
set expandtab

" allow mouse
set mouse=a

" line numbers
set number

" allow going left
set backspace=indent,eol,start
set whichwrap+=<,>,h,l,[,]

