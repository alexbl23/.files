syntax on

set tabstop=4
set softtabstop=4
set expandtab

set autoindent
filetype indent plugin on

set ignorecase
set smartcase
set hlsearch

set number
set wildmenu
set showcmd
set lazyredraw
set showmatch
set ruler
set hidden
set nowrap

set nobackup
set nowb
set noswapfile

set backspace=indent,eol,start

